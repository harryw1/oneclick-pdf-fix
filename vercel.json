{
  "functions": {
    "src/pages/api/**/*.ts": {
      "maxDuration": 120
    },
    "src/pages/api/process.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": "100mb"
    },
    "src/pages/api/upload.ts": {
      "maxDuration": 60,
      "maxRequestBodySize": "100mb"
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_IGNORE_INCORRECT_LOCKFILE": "1"
    }
  },
  "crons": [
    {
      "path": "/api/process-queue",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cleanup-files",
      "schedule": "0 * * * *"
    }
  ]
}